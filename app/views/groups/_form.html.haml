= form_for @group do |g|
  .fields.pull-left.span2
    %h3 Group
    = g.label :name
    = g.text_field :name

    = g.label :description
    = g.text_area :description
  .span2.offset1
    %h3 Admins
    = g.collection_check_boxes(:admin_ids, User.all, :id, :full_name)

    = g.hidden_field :created_by_id, value: current_user.id
    
  .row.actions
    = g.submit 'Save'
